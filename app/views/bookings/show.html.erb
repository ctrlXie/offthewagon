    <div class='product-body'>
      <h3>Start time:</h3>
      <p><%= @booking.start_time.strftime("%H:%M") %></p>
    </div>

    <div class='product-body'>
      <h3>End time:</h3>
      <p><%= @booking.end_time.strftime("%H:%M") %></p>
    </div>

    <div class='product-body'>
      <h3>Status:</h3>
      <p><%= @booking.status %></p>
    </div>

        <div class='product-body'>
