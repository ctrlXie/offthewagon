<div class="wrapper">

<div class="container text-center">
  <div class="profile_card">
    <h1><%= @teacher.full_name %></h1>
    <%= image_tag 'stock_photo.jpg', class: "profile_photo" %>
    <p>Email: <%= @teacher.user.email %></p>
    <p>ID: <%= @teacher.id %></p>

  <h3>Skills:</h3>
   <% @teacher_skills.each do |skill| %>
    <h4 class="skill"><%= skill.name.capitalize %></h4>
    <% level = "" %>
    <% case skill.level %>
      <% when 1 then level="squire" %>
      <% when 2 then level="knight" %>
      <% when 3 then level="better than you" %>
      <% when 4 then level="ascending" %>
      <% when 5 then level="god mode" %>
    <% else level="wtf?" %>
    <% end %>
    <p><%= level.capitalize %> <%= link_to "delete", teacher_teacher_skill_path(@teacher, skill), method: :delete %></p>

  <% end %>
  <%=  render 'teacher_skills/form' %>


<!-- Checks if user is signed in -->
<% if user_signed_in? %>
  <!-- Validates that User cannot book himself -->
  <% if current_user.id == @teacher.user_id %>
      <p><%= link_to 'Edit teacher details', edit_teacher_path %></p>
    <% else %>
      <p><%= link_to 'Book this teacher!', new_teacher_booking_path(@teacher) %></p>
  <% end %>

<!-- Show Book this teacher if User is not logged in to redirect him to sign up -->
<% else %>
  <p><%= link_to 'Book this teacher!', new_teacher_booking_path(@teacher) %></p>
<% end %>

<p><%= link_to 'Go Back to home page', root_path %> </p>
</div>
</div>
