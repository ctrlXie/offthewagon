<div class="wrapper">
  <div class="title">
    <h1 class="text-center">Select the teacher you would like to book</h1>
  </div>
  <div class="flex-container">
    <!-- Container Start -->
    <!-- Beginning of Teacher Card -->

    <div class="container">
      <div class="teacher-container">

        <% if @teachers.length == 0 %>
          <h3>No teachers found, go back to home page by clicking <%= link_to "here", root_path %> </h3>
        <% else %>
        <h3>Select from <%= @teachers.length %> Teachers</h3>

        <div class="row">
          <% @teachers.each do |teacher| %>
          <div class="col-xs-12 col-sm-6">
            <%= render "teachers/card", teacher: teacher %>
          </div>
          <!-- col div -->

          <% end %>
        <!-- Each end -->

        </div>
        <!-- Row div -->

        <% end %>
        <!-- If end -->

    </div>
    <!-- teacher cointainer div -->
  </div>
  <!-- container -->

  <!-- End of Teacher Card -->
  <!-- Mapbox Maps -->
  <div
  id="map"
  style="height: 100vh;"
  data-markers="<%= @markers.to_json %>"
  >
  </div>
  <!-- flex container -->
</div>
<!-- wrapper -->
</div>

