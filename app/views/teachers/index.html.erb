<div class="wrapper">
  <div class="container">
    <!-- Container Start -->

    <h1>Select the teacher you would like to book:</h1>

    <!-- Beginning of Teacher Card -->
    <div class="row">
      <% @teachers.each do |teacher| %>
      <div class="col-xs-4">
        <% skills = TeacherSkill.where(teacher_id: teacher.id) %>
        <% top_skill = skills.order('level DESC').first.try(:name) %>
        <% if top_skill == 'ruby' %>
          <div class="card ruby">
        <% elsif top_skill == 'swift' %>
          <div class="card swift">
        <% elsif top_skill == 'c' %>
          <div class="card c">
        <% elsif top_skill == 'javascript' %>
          <div class="card javascript">
        <% elsif top_skill == 'python' %>
          <div class="card python">
        <% else %>
          <div class="card no_skill">
        <% end %>
            <div class="skills">

              <%= top_skill %>

            </div>
            <div class="card-description">
              <h2>
                Teacher Name
              </h2>
            </div>
            <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <a class="card-link" href="<%= teacher_path(teacher) %>" ></a>
          </div>
        </div>
        <% end %>
      </div>
      <!-- End of Teacher Card -->

      <!-- Container end -->
    </div>
  </div>

