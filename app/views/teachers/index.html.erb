<div class="wrapper">
  <div class="container">
    <!-- Container Start -->

    <h1>Select the teacher you would like to book:</h1>

    <!-- Beginning of Teacher Card -->
    <div class="row">
      <% @teachers.each do |teacher| %>
        <div class="col-xs-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <div class="skills">
              <%#= teacher.top_skill.try(:name) %>
              <% teacher.skills %>
              <% skills = TeacherSkill.where(teacher_id: teacher.id) %>
                <%= skills.order('level DESC').first.try(:name) %>
               <!-- skills.order('level DESC').last.name %> -->



            </div>
            <div class="card-description">
              <h2>
                Teacher Name
              </h2>
            </div>
            <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <a class="card-link" href="<%= teacher_path(teacher) %>" ></a>
          </div>
        </div>
      <% end %>
    </div>
    <!-- End of Teacher Card -->

<!-- Container end -->
  </div>
</div>

